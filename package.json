{
  "private": true,
  "eslintConfig": {
    "extends": "@wildpeaks/commonjs",
    "rules": {
      "require-unicode-regexp": "off"
    }
  },
  "eslintIgnore": [
    "packages"
  ],
  "prettier": "@wildpeaks/prettier-config",
