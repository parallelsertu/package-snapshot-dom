  "devDependencies": {
    "@wildpeaks/eslint-config-commonjs": "12.2.0",
    "@wildpeaks/prettier-config": "12.2.0",
    "eslint": "7.29.0",
    "jsdom": "16.6.0",
    "playwright": "1.12.3"
  }
}
